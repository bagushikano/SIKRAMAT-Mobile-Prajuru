<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.register.RegisterActivity">

    <LinearLayout
        android:id="@+id/pengajuan_kematian_loading_container"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:SpinKit_Color="@color/primaryColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Mohon tunggu..."
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceSubtitle1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pengajuan_kematian_failed_container"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <ImageView
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_outline_error_outline_24"
            app:tint="@color/primaryColor" />

        <TextView
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="4dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ups!"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terjadi kesalahan. Silahkan klik refresh atau coba lagi nanti"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

        <Button
            android:id="@+id/pengajuan_kematian_refresh"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textColor="@color/primaryLightColor"
            app:icon="@drawable/ic_outline_refresh_24"
            app:iconGravity="textStart"
            app:iconTint="@color/primaryLightColor"
            app:strokeColor="@color/primaryLightColor" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".activity.HomeActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="Pendataan Perkawinan"
                app:titleTextAppearance="@style/TextAppearance.App.AppBarTitle" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/kematian_pengajuan_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:animateLayoutChanges="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendataan Perkawinan"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceHeadline5"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Periksa data Perkawinan sebelum menyimpan data."
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/krama_image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_marginBottom="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_outline_category_24"
                                    app:tint="@color/primaryLightColor" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Jenis Perkawinan"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:textAppearance="?attr/textAppearanceBody2"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="Campuran Keluar"
                                        android:textStyle="bold"
                                        android:textAppearance="?attr/textAppearanceBody1" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_outline_calendar_today_24"
                                    app:tint="@color/primaryLightColor" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Tanggal Perkawinan"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:textAppearance="?attr/textAppearanceBody2"
                                        />
                                    <TextView
                                        android:id="@+id/perkawinan_tanggal_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="19 Jan "
                                        android:textStyle="bold"
                                        android:textAppearance="?attr/textAppearanceBody1"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                            <View style="@style/Divider"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp">
                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_outline_description_24"
                                    app:tint="@color/primaryLightColor" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="No. Bukti Serah Terima Perkawinan"
                                        android:textColor="?android:attr/textColorSecondary"
                                        />
                                    <TextView
                                        android:id="@+id/perkawinan_no_serah_terima_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="-"
                                        android:textStyle="bold"
                                        android:textAppearance="?attr/textAppearanceBody1"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                            <Button
                                android:layout_marginTop="8dp"
                                android:id="@+id/perkawinan_berkas_serah_terima_show"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Lihat Berkas Serah Terima Perkawinan"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:backgroundTint="@color/primaryColor"
                                app:icon="@drawable/ic_outline_description_24"
                                app:iconGravity="textStart"
                                app:iconTint="@color/white" />

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_outline_description_24"
                                    app:tint="@color/primaryLightColor" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="No. Akta Perkawinan"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:textAppearance="?attr/textAppearanceBody2"
                                        />
                                    <TextView
                                        android:id="@+id/perkawinan_no_akta_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="-"
                                        android:textStyle="bold"
                                        android:textAppearance="?attr/textAppearanceBody1"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                            <Button
                                android:layout_marginTop="8dp"
                                android:id="@+id/perkawinan_berkas_akta_show"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Lihat Berkas Akta Perkawinan"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:backgroundTint="@color/primaryColor"
                                app:icon="@drawable/ic_outline_description_24"
                                app:iconGravity="textStart"
                                app:iconTint="@color/white" />

                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_outline_description_24"
                                    app:tint="@color/primaryLightColor" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Keterangan"
                                        android:textColor="?android:attr/textColorSecondary"
                                        android:textAppearance="?attr/textAppearanceBody2"
                                        />
                                    <TextView
                                        android:id="@+id/perkawinan_keterangan_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="-"
                                        android:textStyle="bold"
                                        android:textAppearance="?attr/textAppearanceBody1"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identitas Mempelai"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Pasangan"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View style="@style/Divider"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp">
                        </View>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.47" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NIK Pasangan:"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/nik_pasangan_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/primaryColor"
                                app:layout_constraintStart_toEndOf="@id/guideline"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama:"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/nik_pasangan_text"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/nama_pasangan_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/primaryColor"
                                app:layout_constraintStart_toEndOf="@id/guideline"
                                app:layout_constraintTop_toBottomOf="@id/nik_pasangan_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agama Pasangan:"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/nama_pasangan_text"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/agama_pasangan_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/primaryColor"
                                app:layout_constraintStart_toEndOf="@id/guideline"
                                app:layout_constraintTop_toBottomOf="@id/nama_pasangan_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alamat Pasangan:"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/agama_pasangan_text"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/alamat_asal_pasangan_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/primaryColor"
                                app:layout_constraintStart_toEndOf="@id/guideline"
                                app:layout_constraintTop_toBottomOf="@id/agama_pasangan_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Desa/Kelurahan Asal:"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/alamat_asal_pasangan_text"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/desdinas_asal_pradana_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:layout_marginTop="4dp"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/primaryColor"
                                app:layout_constraintStart_toEndOf="@id/guideline"
                                app:layout_constraintTop_toBottomOf="@id/alamat_asal_pasangan_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/krama_pradana_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/linearLayout6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/krama_pradana_image"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/krama_pradana_nama_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="4dp"
                                    android:text="Anak agung bagus krama"
                                    android:textAppearance="?attr/textAppearanceBody1"
                                    android:textColor="@color/primaryColor"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_marginTop="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="8dp"
                                        android:src="@drawable/ic_outline_person_24"
                                        app:tint="@color/primaryLightColor" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="NIK"
                                            android:textColor="?android:attr/textColorSecondary"
                                            android:textAppearance="?attr/textAppearanceBody2"
                                            />
                                        <TextView
                                            android:id="@+id/krama_pradana_nik_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:layout_marginBottom="4dp"
                                            android:text="123456789012345"
                                            android:textStyle="bold"
                                            android:textAppearance="?attr/textAppearanceBody1"
                                            />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="8dp"
                                        android:src="@drawable/ic_outline_badge_24"
                                        app:tint="@color/primaryLightColor" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Nomor Krama Mipil"
                                            android:textColor="?android:attr/textColorSecondary"
                                            android:textAppearance="?attr/textAppearanceBody2"
                                            />
                                        <TextView
                                            android:id="@+id/krama_pradana_no_mipil_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:layout_marginBottom="4dp"
                                            android:text="123456789012345"
                                            android:textStyle="bold"
                                            android:textAppearance="?attr/textAppearanceBody1"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/krama_pradana_image_loading_container"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center|end"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:indeterminate="true"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <com.google.android.material.imageview.ShapeableImageView
                                android:visibility="visible"
                                android:id="@+id/krama_pradana_image"
                                android:layout_width="90dp"
                                android:layout_height="120dp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center|end"
                                android:src="@drawable/paceholder_krama_pict"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:strokeColor="@color/white"
                                app:strokeWidth="0dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_marginTop="8dp"
                            style="@style/Divider"/>


                        <Button
                            android:id="@+id/krama_pradana_detail_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:animateLayoutChanges="true"
                            android:text="Detail Pradana"
                            style="?attr/materialButtonOutlinedStyle"
                            app:icon="@drawable/ic_baseline_arrow_forward_24"
                            app:iconGravity="textEnd" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:id="@+id/perkawinan_pendataan_progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:text="Mohon tunggu..." />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="true" />
                </LinearLayout>

                <Button
                    android:animateLayoutChanges="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/perkawinan_store_draft_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan sebagai Draft"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_outline_save_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

                <Button
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/perkawinan_store_sah_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan dan Sahkan"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_outline_save_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>